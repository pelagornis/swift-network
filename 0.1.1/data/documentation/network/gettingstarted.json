ode":["dependencies: [","    .package(url: \"https:\/\/github.com\/your-username\/swift-network.git\", from: \"1.0.0\")","]"]},{"level":2,"text":"Basic Setup","type":"heading","anchor":"Basic-Setup"},{"level":3,"text":"1. Import the Library","type":"heading","anchor":"1-Import-the-Library"},{"type":"codeListing","syntax":"swift","code":["import Network"]},{"level":3,"text":"2. Define Your Endpoint","type":"heading","anchor":"2-Define-Your-Endpoint"},{"type":"paragraph","inlineContent":[{"text":"Create an endpoint that conforms to the ","type":"text"},{"type":"codeVoice","code":"Endpoint"},{"text":" protocol:","type":"text"}]},{"type":"codeListing","syntax":"swift","code":["struct UserEndpoint: Endpoint {","    let baseURL = URL(string: \"https:\/\/api.example.com\")!","    let path = \"\/users\"","    let method = Http.Method.get","    let task = Http.Task.requestPlain","    let headers = [Http.Header.accept(\"application\/json\")]","    let timeout: TimeInterval? = 30","}"]},{"level":3,"text":"3. Create a Network Provider","type":"heading","anchor":"3-Create-a-Network-Provider"},{"type":"codeListing","syntax":"swift","code":["let provider = NetworkProvider<UserEndpoint>()"]},{"level":3,"text":"4. Make a Request","type":"heading","anchor":"4-Make-a-Request"},{"type":"codeListing","syntax":"swift","code":["do {","    let users: [User] = try await provider.request(UserEndpoint(), as: [User].self)","    print(\"Users: \\(users)\")","} catch {","    print(\"Error: \\(error)\")","}"]},{"level":2,"text":"Complete Example","type":"heading","anchor":"Complete-Example"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Here’s a complete example showing how to fetch users from an API:"}]},{"type":"codeListing","syntax":"swift","code":["import Network","","\/\/ Define your data model","struct User: Codable {","    let id: Int","    let name: String","    let email: String","}","","\/\/ Define your endpoint","struct UserEndpoint: Endpoint {","    let baseURL = URL(str